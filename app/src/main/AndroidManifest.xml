<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.casterlabs.brahma" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="co.casterlabs.brahma.BaseApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="co.casterlabs.brahma.Splash"
             >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="co.casterlabs.brahma.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="co.casterlabs.brahma.MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="co.casterlabs.brahma.ConferenceActivity"
            android:label="@string/title_activity_conference" >
        </activity>
        <activity
            android:name="com.mikepenz.aboutlibraries.ui.LibsActivity"
            android:label="@string/title_activity_conference" >
        </activity>
        <activity
            android:name="co.casterlabs.brahma.AboutActivity"
            android:label="@string/action_about" >
        </activity>
        <activity
            android:name="co.casterlabs.brahma.MapActivity"
            android:label="Map"
            android:parentActivityName="co.casterlabs.brahma.MainActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="co.casterlabs.brahma.MainActivity" />
        </activity>
        <activity
            android:name="co.casterlabs.brahma.Team"
            android:label="Brahma Team" >
        </activity>
        <activity
            android:name="co.casterlabs.brahma.Sponsors"
            android:label="Sponsors" >
        </activity>
        <activity
            android:name="co.casterlabs.brahma.Dev"
            android:label="Developers" >
        </activity>
        <activity
            android:name="co.casterlabs.brahma.Map2"
            android:label="Map2"
            android:parentActivityName="co.casterlabs.brahma.MainActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="co.casterlabs.brahma.MainActivity" />

        </activity>
    </application>

</manifest>
